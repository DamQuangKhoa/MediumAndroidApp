<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_180dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/distance_18dp"
        android:weightSum="10"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="based on your reading history"
            android:textAllCaps="true"
            android:textSize="@dimen/text_16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/distance_10dp"
            android:layout_marginTop="@dimen/distance_10dp"
            android:layout_weight="5"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/distance_8dp"
                android:layout_weight="7"
                android:text="When (and Why) you should use ES6 arrow functions?"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/bg_button_green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Mai The Nguyen"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="@dimen/promotion_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="11 Apr"
                    />

                <TextView
                    android:layout_width="@dimen/promotion_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="6 min read"
                    />

                <ImageButton
                    android:layout_width="@dimen/promotion_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/icons8_bookmark_48_white"
                    android:background="@null"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>