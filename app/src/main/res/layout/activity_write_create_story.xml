<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/etherum"
        android:orientation="vertical">
    </LinearLayout>


    <LinearLayout
        android:id="@+id/center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_above="@+id/footer"
        android:weightSum="2"
        android:orientation="vertical"
        android:paddingLeft="@dimen/distance_20dp"
        android:paddingRight="@dimen/distance_15dp"
        android:layout_marginBottom="@dimen/distance_20dp"


        >
    <android.support.v7.widget.CardView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@color/cardview_light_background"
        android:layout_height="@dimen/promotion_0dp">

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <ImageView
           android:paddingTop="@dimen/distance_25dp"
           android:layout_weight="1"
           android:src="@drawable/icons8_round_100"
           android:layout_width="@dimen/promotion_0dp"
           android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_weight="7"
            android:orientation="vertical"
            android:weightSum="5"
            android:layout_width="@dimen/promotion_0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Write a Story"
                android:textStyle="bold"
                android:textSize="25sp"
                android:paddingTop="@dimen/distance_20dp"
                />
            <TextView
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:paddingBottom="10dp"
                android:text="Medium Stories are the easiest way to share your ideas with the world"
                />


        </LinearLayout>
    </LinearLayout>

    </android.support.v7.widget.CardView>
 <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/distance_15dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@color/cardview_light_background"
        android:layout_height="@dimen/promotion_0dp">

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <ImageView
           android:paddingTop="@dimen/distance_25dp"
           android:layout_weight="1"
           android:src="@drawable/icons8_round_100"
           android:layout_width="@dimen/promotion_0dp"
           android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_weight="7"
            android:orientation="vertical"
            android:weightSum="5"
            android:layout_width="@dimen/promotion_0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create a Series "
                android:textStyle="bold"
                android:textSize="25sp"
                android:paddingTop="@dimen/distance_20dp"
                />
            <TextView
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_15sp"
                android:paddingTop="10dp"
                android:paddingBottom="@dimen/distance_10dp"
                android:text="Medium Series are mobile stories that can be added to over time and unford card by card with the tap of finger"
                />


        </LinearLayout>
    </LinearLayout>

    </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/greenyBlue"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/distance_10dp"
            app:srcCompat="@drawable/ic_home_page_48_white" />

        <ImageView
            android:id="@+id/nav_bookmark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/distance_10dp"
            app:srcCompat="@drawable/icons8_bookmark_48_white" />

        <ImageView
            android:id="@+id/nav_notify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/distance_10dp"
            app:srcCompat="@drawable/icons8_notification_48" />

        <ImageView
            android:id="@+id/nav_menu"
            android:layout_width="0dp"
            android:background="@color/aquaMarine"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/distance_10dp"
            app:srcCompat="@drawable/icons8_menu_48_white" />

        <ImageView
            android:id="@+id/nav_person"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/distance_10dp"
            app:srcCompat="@drawable/icons8_user_48_white" />
    </LinearLayout>

</RelativeLayout>
